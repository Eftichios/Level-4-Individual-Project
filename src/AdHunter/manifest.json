{
    "name": "Ad Hunter", 
    "description": "Counts how many ad trackers there are on a page",
    "manifest_version": 2,
    "version": "1.0", 
    "background": {
        "scripts": ["background.js", "blocked.js", "adhunt.js", "socket.io.js", "websocket.js"],
        "persistent": true
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {"256":"images/icon256.png"}
    },
    "icons": {
        "256": "images/icon256.png"
    },
    "permissions": ["activeTab", "declarativeContent", "storage", "webRequest", "webRequestBlocking", "http://*/", "https://*/", "http://localhost:5000/"],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://stackpath.bootstrapcdn.com; object-src 'self';"
}